<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:backgroundTint="@color/greyish"
    app:cardElevation="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:paddingBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_micro_home_list"
            android:layout_width="298dp"
            android:layout_height="67dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="55dp"
            android:fontFamily="sans-serif-black"
            android:text="Microphone"
            android:textAlignment="center"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/tv_shortdesc"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_micro_home_list"
            android:layout_alignStart="@+id/tv_micro_home_list"
            android:layout_alignEnd="@+id/tv_micro_home_list"
            android:layout_marginStart="23dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="sans-serif-black"
            android:text="This is schort description" />

        <TextView
            android:id="@+id/tv_dummydesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_shortdesc"
            android:layout_alignStart="@+id/tv_shortdesc"
            android:layout_alignEnd="@+id/tv_shortdesc"
            android:layout_alignParentTop="false"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="-31dp"
            android:fontFamily="sans-serif-medium"
            android:text="This is a dummy text desccription for the UI design"
            android:textSize="13sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>